<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#007850"
    >
    
    
     <com.example.emulator8051.BreadBoard
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="0dp"
        android:scrollbars="horizontal|vertical" />
    

   

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="fill_parent"
       android:background="#000000"
      
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
         <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="120dp"
		android:background="@drawable/buttoncreate"
		android:onClick="createCircuit"/>
        
        
         <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/run"
        android:onClick="run"/>

   
    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="14dp"
        android:background="@drawable/oscilloscope"
        android:onClick="oscilloscope"
         />
    </LinearLayout>

</RelativeLayout>
